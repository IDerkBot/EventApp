<Page x:Class="EventApp.Pages.EditPages.UserEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventApp.Pages.EditPages"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
			VerticalAlignment="Center" HorizontalAlignment="Center"
      Title="UserEditPage">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Text="Логин" Grid.Row="0"/>
		<TextBlock Text="Пароль" Grid.Row="1"/>

		<TextBox Text="{Binding Login}" Grid.Row="0" Grid.Column="1"/>
		<TextBox Text="{Binding Password}" Grid.Row="1" Grid.Column="1"/>

		<Button Content="Добавить" Click="Button_Click" Grid.Row="5" Grid.ColumnSpan="2"/>
	</Grid>
</Page>
